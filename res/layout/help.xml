    <AbsoluteLayout android:layout_width="fill_parent" android:id="@+id/absoluteLayout5" android:layout_height="wrap_content">
        <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Flash Cards" android:layout_y="17dip" android:textSize="17dip" android:layout_x="18dip"></TextView>
