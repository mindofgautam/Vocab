        <TextView android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Take Test" android:layout_y="16dip" android:textSize="17dip" android:layout_x="18dip"></TextView>
        <TextView android:id="@+id/textView10" android:layout_height="wrap_content" android:text="This option allows the user to test his knowledge of GRE words. The user needs to create a Profile before attending the test." android:layout_width="180dip" android:layout_x="123dip" android:layout_y="24dip" android:textSize="15dip"></TextView>
    </AbsoluteLayout>
    
    
</LinearLayout>
</ScrollView>