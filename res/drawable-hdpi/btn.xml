<?xml version="1.0" encoding="utf-8"?> 
<selector     xmlns:android="http://schemas.android.com/apk/res/android">      
<item android:state_pressed="true" >        
 <shape>             
 <gradient                 
 android:startColor="@color/trydark"                 
 android:endColor="@color/trydark"                 
 android:angle="270" />            
<stroke                 
android:width="3dp"                 
android:color="@color/bg22" />             
<corners                
 android:radius="3dp" />             
<padding                 
android:left="10dp"                
 android:top="10dp"                
  android:right="10dp"                
   android:bottom="10dp" />         
</shape>     
</item>      
<item android:state_focused="true" >         
<shape>             
<gradient                 android:endColor="@color/bdark"                 
android:startColor="@color/blight"                
 android:angle="270" />            
<stroke android:width="3dp"            
android:color="@color/bbg" />           
<corners android:radius="3dp" />          
<padding  android:left="10dp"           
android:top="10dp"               
android:right="10dp"               
android:bottom="10dp" />       
</shape>    
</item>   
<item>    
<shape>       
<gradient android:endColor="@color/dark11"  
android:startColor="@color/light1"        
android:angle="270" />         
<stroke  android:width="3dp"   
android:color="@color/bg1" /> 
<corners android:radius="3dp" />             
<padding android:left="10dp"                
android:top="10dp"                 
android:right="10dp"          
android:bottom="10dp" />         
</shape>     
</item> 
</selector> 